{% extends "base.html.twig"%}

{% block body %}
    <div class="container" style="margin-bottom: 50px;">
        <div class="row" style="margin-top: 30px;">
            <img class="img-responsive center-block" src="{{asset('/images/confirmation.png')}}">
            <p class="text-center">آگهی شما با موفقیت ثبت شده و در صف بررسی ناظر قرار گرفته است. </p>
            <p class="text-center">زمان انتظار در صف برای تأیید آگهی توسط ناظر 8 ساعت خواهد بود . برای تایید سریع تر لطفا <a href="{{path('hwi_oauth_connect')}}">ثبت نام</a> کنید.</p><hr>
        </div>
        <div class="row">
            <nav class="navbar navbar-default">
                <div class="container-fluid" >
                    <div class="navbar-header" style="float: right;">
                        <a href="{{path('managePage',{id: product.id})}}"><button type="button" class="btn btn-success navbar-btn">پیش نمایش</button></a>
                        <a href="{{path('editPage',{id: product.id})}}"><button type="button" class="btn btn-primary navbar-btn">ویرایش</button></a>
                        <a href="{{path('deletePage',{id: product.id})}}"><button type="button" class="btn btn-danger navbar-btn">حذف</button></a>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">تماس با فروشنده </h3>
                        </div>
                        <div class="panel-body">
                            <img class="img-responsive center-block" src="{{asset('/images/contact.png')}}">
                            <hr>
                            <button class="btn btn-block btn-primary btn-lg"><span class="glyphicon glyphicon-earphone"></span> {{product.tell}}</button>
                            <button class="btn btn-block btn-primary"><span class="glyphicon glyphicon-envelope"></span> {{product.email}}</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">

                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        {% set i = 0 %}
                        {% for image in product.images %}
                            <li data-target="#carousel-example-generic" data-slide-to="{{i}}" class="active"></li>
                                {% set i = i + 1 %}
                            {% endfor %}
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">

                        {% set counter = 0 %}
                        {% for image in product.images %}
                            {% if counter == 0 %}
                                {% set active = "active" %}
                            {% else %}
                                {% set active = "" %}
                            {% endif %}
                            {% set counter = counter + 1%}
                            <div class="item {{active}}">
                                <img src="{{asset(image.getImagePathNameLargeSize())}}" alt="..." >
                                <div class="carousel-caption">
                                    ...
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row" style="margin-top: 30px;">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <h3 class="title-color">{{product.city}}</h3>
                                </div>
                                <div class="col-md-10">
                                    <h3>{{product.title}}</h3>
                                </div>

                            </div>
                            <hr>
                            <span class="glyphicon glyphicon-time"></span><small style="margin-right: 5px;">نیم ساعت پیش</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>توضیحات</h4><hr>
                            <p>{{product.description}}</p>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div> 
{% endblock %}

